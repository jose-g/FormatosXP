@model MGP.CI.SEGURIDAD.Presentacion.ViewModels.DocumentoIdentidadTiposViewModel

@{
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title" style="color:white">Editar Tipo de Documento</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" style="color:white"><i class="glyphicon glyphicon-remove"></i><span class="menu-title"></span></span>
    </button>
</div>

@using (Html.BeginForm("GrabarTipoDocumento", "TablasMaestras", FormMethod.Post, new { id = "FrmEditarDocumento", onsubmit = "return ValidarTipoDocumento(this)" }))
{
    <div class="modal-body">
        @Html.HiddenFor(x => x.Id)

        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                @{ if (Model.Id != 0)
                    {

                <div class="form-group">
                    @Html.LabelFor(x => x.Codigo, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Codigo, new { @readonly = "readonly", @class = "form-control" })
                </div>
                        }
                    }
                <div class="form-group">
                    @Html.LabelFor(x => x.Descripcion, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="modal-footer text-right">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <button id="btnGrabarTipoDocumento" type="submit" class="btn btn-warning"><i class="fa fa-save"></i>&nbsp;Grabar</button>
                    <button id="btnCerrarTipoDocumento" type="button" data-dismiss="modal" class="btn btn-danger"><i class="fa fa-times"></i>&nbsp;Cerrar</button>
                </div>
            </div>

        </div>
    </div>
}
