@model MGP.CI.SEGURIDAD.Presentacion.ViewModels.UbigeoNavalVM

@{
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title" style="color:white">Editar Ubigel Naval</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" style="color:white"><i class="glyphicon glyphicon-remove"></i><span class="menu-title"></span></span>
    </button>
</div>

@using (Html.BeginForm("GrabarUbigeo", "TablasMaestras", FormMethod.Post, new { id = "FrmEditarUbigeoNaval", onsubmit = "return ValidarUbigelNaval(this)" }))
{
    <div class="modal-body">
        @Html.HiddenFor(x => x.UbigeoNavalId)
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                @{ if (Model.UbigeoNavalId != 0)
                    {

                        <div class="form-group">
                            @Html.LabelFor(model => model.ZonaNavalId, new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.ZonaNavalId, new SelectList(Model.LstUbigeoNavalBE, "ZonaNavalId", "ZonaNavalDescCorta"), new { @class = "form-control", @disabled = "disabled" })
                        </div>
                    }
                }
                <div class="form-group">
                    @Html.LabelFor(x => x.DependenciaId, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.DependenciaId, new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.DependenciaDescCorta, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.DependenciaDescCorta, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.DependenciaDescLarga, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.DependenciaDescLarga, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="modal-footer text-right">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <button id="btnGrabarTipoUbigeo" type="submit" class="btn btn-warning"><i class="fa fa-save"></i>&nbsp;Grabar</button>
                    <button id="btnCerrarTipoUbigeo" type="button" data-dismiss="modal" class="btn btn-danger"><i class="fa fa-times"></i>&nbsp;Cerrar</button>
                </div>
            </div>

        </div>

    </div>
}