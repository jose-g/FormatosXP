<div>
    <div class="tab-content">
        <div class="tab-pane fade in active">
            <div class="panel-group accordion">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <center>
                            <h3 class="panel-title">
                                <a data-parent="#accordion" data-toggle="collapse" href="#IdPanelCrearFicha" aria-expanded="false" class="">Creacion de la Ficha de usuario</a>
                            </h3>
                        </center>
                    </div>
                    <div class="panel-collapse collapse in" id="IdPanelCrearFicha" aria-expanded="true">

                        @using (Html.BeginForm("null", "null", FormMethod.Post, new { id = "frmDetallesUsuario", onsubmit = "return CrearFicha(this)", enctype = "multipart/form-data" }))
                        {
                            <div class="modal-body">
                                    <div class="row" style="text-align:center;">
                                        <h3>Desea Crear un Nuevo Declarante???</h3>
                                    </div>
                                    <br />
                                    <br />
                                    <div class="row" style="text-align:center;">
                                        <ul class="nav nav-pills" style="display:inline-table;">
                                            <li class="pull-center btn-danger" style="display:inline;margin-right: 25px;margin-left: 25px;"><button id="btnDenegarFicha" type="button" data-dismiss="modal" class="btn"><i class="fa fa-times"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;No&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button></li>
                                            <li class="pull-center btn-warning" style="display:inline;margin-right: 25px;margin-left: 25px;"><button id="btnAceptarCrearFicha" type="submit" class="btn"><i class="fa fa-save"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Si&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button></li>
                                        </ul>

                                    </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


