@model MGP.CI.SEGURIDAD.Presentacion.ViewModels.X1003.AgregarIngresosAlPaisViewModel
@{
    Layout = null;
}
<div>
    <div class="tab-content">
        <div class="tab-pane fade in active">
            <div class="panel-group accordion">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <center>
                            <h3 class="panel-title">
                                <a data-parent="#accordion" data-toggle="collapse" href="#IdPanelRegistrarDomicilioDeclarante" aria-expanded="false" class="">AGREGAR DOMICILIO</a>
                            </h3>
                        </center>
                    </div>
                    <div class="panel-collapse collapse in" id="IdPanelRegistrarDomicilioDeclarante" aria-expanded="true">

                        @using (Html.BeginForm("RegistarIngresoAlPais", "XP1003", FormMethod.Post, new { id = "frmRegistrarIngresoAlPais", onsubmit = "return RegistrarIngresoAlPaisInDataTable(this)", enctype = "multipart/form-data" }))
                        {
                            <div class="modal-body">
                                <div class="row">
                                    <div class="row">
                                        <div class="col-sm-3 col-md-3 col-lg-3">
                                            <div class="form-group">
                                                @Html.LabelFor(x => x.IngresoAlPaisFechaIngreso, new { @class = "control-label" })
                                                @Html.TextBoxFor(x => x.IngresoAlPaisFechaIngreso, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.IngresoAlPaisFechaIngreso, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3 col-md-3 col-lg-3">
                                            <div class="form-group">
                                                @Html.LabelFor(x => x.IngresoAlPaisFechaInicioMision, new { @class = "control-label" })
                                                @Html.TextBoxFor(x => x.IngresoAlPaisFechaInicioMision, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.IngresoAlPaisFechaInicioMision, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3 col-md-3 col-lg-3">
                                            <div class="form-group">
                                                @Html.LabelFor(x => x.IngresoAlPaisFechaTerminoMision, new { @class = "control-label" })
                                                @Html.TextBoxFor(x => x.IngresoAlPaisFechaTerminoMision, new { @class = "form-control"})
                                                @Html.ValidationMessageFor(x => x.IngresoAlPaisFechaTerminoMision, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <br />
                                <div class="row" style="text-align:center;">
                                    <ul class="nav nav-pills" style="display:inline-table;">
                                        <li class="pull-center btn-danger" style="display:inline;margin-right: 25px;margin-left: 25px;"><button id="btnDenegarIngresoAlPais" type="button" data-dismiss="modal" class="btn"><i class="fa fa-times"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;No&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button></li>
                                        <li class="pull-center btn-warning" style="display:inline;margin-right: 25px;margin-left: 25px;"><button id="btnAceptarIngresoAlPais" type="submit" class="btn"><i class="fa fa-save"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Si&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button></li>
                                    </ul>

                                </div>
                            </div>
                        }
                    </div>
                    <div class="alert_error" style="display:none;" id="frmShowErrorPopupIngresoAlPais">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



