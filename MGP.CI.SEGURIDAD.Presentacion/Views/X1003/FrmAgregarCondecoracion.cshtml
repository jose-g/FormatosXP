@model MGP.CI.SEGURIDAD.Presentacion.ViewModels.X1003.AgregarCondecoracionesViewModel
@{
    Layout = null;
}

<div>
    <div class="tab-content">
        <div class="tab-pane fade in active">
            <div class="panel-group accordion">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <center>
                            <h3 class="panel-title">
                                <a data-parent="#accordion" data-toggle="collapse" href="#IdPanelRegistrarIdioma" aria-expanded="false" class="">AGREGAR CONDECORACION</a>
                            </h3>
                        </center>
                    </div>
                    <div class="panel-collapse collapse in" id="IdPanelRegistrarIdioma" aria-expanded="true">

                        @using (Html.BeginForm("RegistrarCondecoracion", "XP1003", FormMethod.Post, new { id = "frmRegistarCondecoracion", onsubmit = "return RegistrarCondecoracionInDataTable(this)", enctype = "multipart/form-data" }))
                        {
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Condecoraciones_PaisId, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.Condecoraciones_PaisId, new SelectList(Model.LstPaises, "PaisId", "Nombre"), new
                                           {
                                               @class = "form-control",
                                               data_type = "listbox-dropdown-list",
                                               data_update_target = "#Condecoraciones_InstitucionMilitarExtranjeraId",
                                               data_filter = "PaisId",
                                               data_http_method = FormMethod.Get,
                                               data_url = Url.Action("GetInstitucionesPorPais", "XP1003")
                                           })

                                        </div>
                                    </div>
                                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Condecoraciones_InstitucionMilitarExtranjeraId, new { @class = "control-label" })
                                            @Html.DropDownListFor(x => x.Condecoraciones_InstitucionMilitarExtranjeraId, Enumerable.Empty<SelectListItem>(), "[--Seleccione--]", new
                                       {
                                           @class = "form-control",
                                           data_type = "listbox-dropdown-list",
                                           data_update_target = "#CondecoracionesExtranjerasId",
                                           data_filter = "InstitucioneMilitarExtranjeraId",
                                           data_value_member = "InstitucionMilitarExtranjeraId",
                                           data_text_member = "Descripcion",
                                           data_http_method = FormMethod.Get,
                                           data_url = Url.Action("GetCondecoracionesPorInstitucion", "XP1003")
                                       })
                                        </div>
                                    </div>
                                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.CondecoracionesExtranjerasId, new { @class = "control-label" })
                                            @Html.DropDownListFor(x => x.CondecoracionesExtranjerasId, Enumerable.Empty<SelectListItem>(), "[--Seleccione--]", new
                                       {
                                           @class = "form-control",
                                           data_value_member = "CondecoracionesExtranjerasId",
                                           data_text_member = "Nombre"
                                       })
                                        </div>
                                    </div>
                                    <div class="col-sm-3 col-md-3 col-lg-3">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.CondecoracionesExtranjerasAno, new { @class = "control-label" })
                                            @Html.TextBoxFor(x => x.CondecoracionesExtranjerasAno, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.CondecoracionesExtranjerasAno, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </div>
                                <br />
                                <br />
                                <div class="row" style="text-align:center;">
                                    <ul class="nav nav-pills" style="display:inline-table;">
                                        <li class="pull-center btn-danger" style="display:inline;margin-right: 25px;margin-left: 25px;"><button id="btnDenegarCondecoracion" type="button" data-dismiss="modal" class="btn"><i class="fa fa-times"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;No&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button></li>
                                        <li class="pull-center btn-warning" style="display:inline;margin-right: 25px;margin-left: 25px;"><button id="btnAceptarCondeconracion" type="submit" class="btn"><i class="fa fa-save"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Si&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button></li>
                                    </ul>

                                </div>
                            </div>
                        }
                    </div>
                    <div class="alert_error" style="display:none;" id="frmShowErrorPopupCondecoracion">

                    </div>
                </div>
            </div>
        </div>
    </div>
